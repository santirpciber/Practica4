pipeline {
    agent any
    stages{
        stage('listar directorio actual'){
            steps{
                sh 'ls -la'
            }
        }
        stage('Build de docker'){
            steps {
                sh 'cd deploy'
                sh 'ls -la'
                sh 'cd deploy && docker build -t web:latest ./deploy/Dockerfile'
            }
        }
    }
}